{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./src",
        "module": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "types": ["vite/client", "vite-plugin-svgr/client"],
        "target": "ESNext",
        "removeComments": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "experimentalDecorators": false,
        "useDefineForClassFields": true,
        "noUnusedLocals": true,
        "declaration": false,
        "noLib": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noEmitOnError": false,
        "importHelpers": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true
    },
    "_types": ["cypress", "node", "jest", "@testing-library/jest-dom"],
    "include": [
        "src",
        "./cypress/**/*.ts",
        "./cypress.config.ts",
        "__mocks__/**/*"
    ],
    "exclude": ["./src/wdyr.js"]
}
